<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:text=""
        android:gravity="center"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorGreen"
        android:layout_margin="2dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"

        >
    <TextView
        android:text="Your Answer:"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorGreen"
        android:layout_margin="2dp"
        />

        <EditText
            android:id="@+id/txtAnswer"
            android:text=""
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorGreen"
            android:layout_margin="2dp"
            />

        <ImageView
            android:id="@+id/imgResult"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGreen"
            android:layout_margin="2dp"

            />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"

        >

    <TextView

        android:text="Question:"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@color/colorGreen"
        android:layout_margin="2dp"

        />

   <TextView
       android:id="@+id/txtQuestion"
       android:text=""
       android:gravity="center"
       android:textSize="25dp"
       android:textStyle="bold"
       android:layout_width="0dp"
       android:layout_weight="3"
       android:layout_height="match_parent"
       android:layout_margin="2dp"
       android:background="@color/colorGreen"
   />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ButtonGroup1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_margin="2dp"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:padding="3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt1"
            android:text="1"
            android:textSize="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/mybutton"
            tools:ignore="InvalidId" />

        <Button
            android:id="@+id/bt2"
            android:text="2"
            android:textSize="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/mybutton"
            />

        <Button
            android:id="@+id/bt3"
            android:text="3"
            android:textSize="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/mybutton"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ButtonGroup2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_margin="2dp"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:padding="3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt4"
            android:text="4"
            android:textSize="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/mybutton"
            />

        <Button
            android:id="@+id/bt5"
            android:text="5"
            android:textSize="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/mybutton"
            />

        <Button
            android:id="@+id/bt6"
            android:text="6"
            android:textSize="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/mybutton"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ButtonGroup3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_margin="2dp"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:padding="3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt7"
            android:text="7"
            android:textSize="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/mybutton"
            />

        <Button
            android:id="@+id/bt8"
            android:text="8"
            android:textSize="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/mybutton"
            />

        <Button
            android:id="@+id/bt9"
            android:text="9"
            android:textSize="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/mybutton"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ButtonGroup4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_margin="2dp"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:padding="3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btDot"
            android:text="."
            android:textSize="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/mybutton"
            android:gravity="center_horizontal"
            />

        <Button
            android:id="@+id/bt0"
            android:text="0"
            android:textSize="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/mybutton"
            />

        <Button
            android:id="@+id/btDash"
            android:text="-"
            android:textSize="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/mybutton"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ButtonGroup5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_margin="2dp"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:padding="3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btGenerate"
            android:text="GENERATE"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/btValidate"
            android:text="VALIDATE"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

        <Button
            android:id="@+id/btClear"
            android:text="CLEAR"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"


            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ButtonGroup6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btScore"
            android:text="SCORE"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />


        <Button
            android:id="@+id/btFinish"
            android:text="FINISH"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</LinearLayout>